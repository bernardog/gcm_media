<h1>Minhas Disciplinas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Primeira Unidade</th>
      <th>Segunda Unidade</th>
      <th>Terceira Unidade</th>
      <th>Situação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.first_unity %></td>
        <td><%= course.second_unity %></td>
        <td><%= course.third_unity %></td>
        <td><%= course.status %></td>
        <td><%= link_to 'Visualizar', course %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>
        <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Tem certeza disto?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Disciplina', new_course_path %>
