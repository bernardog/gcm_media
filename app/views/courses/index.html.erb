<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>First unity</th>
      <th>Second unity</th>
      <th>Third unity</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.first_unity %></td>
        <td><%= course.second_unity %></td>
        <td><%= course.third_unity %></td>
        <td><%= course.status %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

